pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    sh '''
                        npm install
                    '''
                }
            }
        }

        stage('Restart Express App') {
            steps {
                dir('frontend') {
                    sh '''
                        pm2 restart express-app || pm2 start app.js --name express-app
                        pm2 save
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Express frontend deployed successfully!"
        }
        failure {
            echo "❌ Express frontend deployment failed"
        }
    }
}
